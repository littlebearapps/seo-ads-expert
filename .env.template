# SEO Ads Expert - Environment Configuration
# Copy this to .env and fill in your actual values

# =================================
# GOOGLE CLOUD PROJECT
# =================================
GOOGLE_CLOUD_PROJECT_ID=your-project-id-here

# =================================
# GOOGLE ADS API CONFIGURATION
# =================================
# Get these from: node scripts/generate-google-ads-token.js
GOOGLE_ADS_CLIENT_ID=your_oauth_client_id_here
GOOGLE_ADS_CLIENT_SECRET=your_oauth_client_secret_here
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token_here

# Get this from: Google Ads → Tools & Settings → API Center
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here

# Your Google Ads account IDs (comma-separated, no dashes)
# Example: 1234567890,0987654321
GOOGLE_ADS_CUSTOMER_IDS=your_customer_ids_here

# Optional: Manager account ID (only if using MCC)
# GOOGLE_ADS_LOGIN_CUSTOMER_ID=your_manager_account_id

# =================================
# BUDGET & USAGE CONTROLS
# =================================
# Maximum API calls per day (safety limit)
MAX_GOOGLE_ADS_CALLS_PER_DAY=500

# Maximum API calls per hour (rate limiting)
MAX_GOOGLE_ADS_CALLS_PER_HOUR=50

# Cache TTL in hours (reduces API calls)
CACHE_TTL_HOURS=24

# Maximum spend analysis window (days)
MAX_ANALYSIS_WINDOW_DAYS=90

# Enable cost monitoring alerts
ENABLE_COST_ALERTS=true
COST_ALERT_EMAIL=your-email@domain.com

# =================================
# GOOGLE ANALYTICS API (Optional)
# =================================
# Uses same OAuth credentials as Google Ads
GOOGLE_ANALYTICS_PROPERTY_ID=your_ga4_property_id

# =================================
# SEARCH CONSOLE API
# =================================
# Path to your service account key (if using service account)
GOOGLE_APPLICATION_CREDENTIALS=./credentials/search-console-service-account.json

# Search Console site URL
SEARCH_CONSOLE_SITE_URL=https://littlebearapps.com

# =================================
# RAPIDAPI CONFIGURATION
# =================================
RAPIDAPI_KEY=your_rapidapi_key
RAPIDAPI_HOST_SERP=real-time-web-search.p.rapidapi.com
RAPIDAPI_HOST_KEYWORDS=keyword-insight.p.rapidapi.com

# RapidAPI usage limits
MAX_SERP_CALLS_PER_RUN=3
MAX_KEYWORD_CALLS_PER_RUN=2

# =================================
# LOGGING & MONITORING
# =================================
LOG_LEVEL=info
LOG_FILE=logs/seo-ads-expert.log

# Enable detailed API request logging
DEBUG_API_REQUESTS=false

# =================================
# SAFETY LIMITS
# =================================
# Fail-safe: Stop processing if costs exceed this amount
DAILY_COST_LIMIT_USD=1.00
MONTHLY_COST_LIMIT_USD=10.00

# Alert thresholds (percentage of monthly limit)
COST_ALERT_THRESHOLD_50=5.00
COST_ALERT_THRESHOLD_75=7.50
COST_ALERT_THRESHOLD_90=9.00